<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiseaseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#7d7d7d"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/classified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/alexandria_regular"
                android:text="Classificado como:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alexandria_bold"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:text="Vírus da folha amarela" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/confidencesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alexandria_regular"
                    android:text="Taxa de assertividade: "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/confidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/alexandria_bold"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="20dp"
                    tools:text="92.09%" />
            </LinearLayout>

            <TextView
                android:id="@+id/diseaseInformationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alexandria_bold"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Informações"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diseaseInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:fontFamily="@font/alexandria_regular"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="#000"
                android:textSize="17dp"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>